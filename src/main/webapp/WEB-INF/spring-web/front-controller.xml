<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- ControllerClassNameHandlerMapping: Deprecated way of setting up Request Handler -->
    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>
    <bean id="detectedController" class="com.dy.spring.controller.DetectedController"/>

    <!-- SimpleUrlHandlerMapping: Static mapping. You indicate url - controller bondage -->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /declared.detected=detectedController
            </value>
        </property>
    </bean>

    <mvc:interceptors>
        <bean class="com.dy.spring.interceptor.LoggingInterceptor"/>
    </mvc:interceptors>


</beans>